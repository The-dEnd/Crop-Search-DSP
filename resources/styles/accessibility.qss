/*Accessibility theme, generated by AI GPT4; should be optimized for color-blind people, dyslexic people, and people with a heavy night-light filter*/

/* Load the OpenDyslexic font */
@font-face {
    font-family: "OpenDyslexic";
    src: url("fonts/OpenDyslexic-Bold.otf");
}

/* Global Styles */
QWidget {
    background-color: #2F67B1; /* Dark blue background */
    color: #FFFFFF; /* White text for high contrast */
    font-family: "OpenDyslexic";
    font-size: 11px;
}

/* Buttons */
QPushButton {
    background-color: #BF2C23; /* Red */
    color: #FFFFFF; /* White text */
	font-size: 11px;
}
QPushButton:hover {
    background-color: #FF4D40; /* Lighter red on hover */
}
QPushButton:pressed {
    background-color: #99201A; /* Darker red when pressed */
}

/* Labels */
QLabel {
    color: #FFFFFF; /* White text */
    font-size: 11px;
}

/* Text Inputs */
QLineEdit, QTextEdit {
    background-color: #FFFFFF;
    color: #000000;
    border: 2px solid #BF2C23; /* Red border */
    padding: 5px;
    font-size: 11px;
}

QLineEdit:focus, QTextEdit:focus {
    border: 2px solid #FF4D40; /* Lighter red on focus */
}

/* Scrollbars */
QScrollBar:vertical, QScrollBar:horizontal {
    background: #2F67B1;
    border: 1px solid #FFFFFF;
}
QScrollBar::handle {
    background: #BF2C23;
}
QScrollBar::handle:hover {
    background: #FF4D40;
}

/* Checkboxes */
QCheckBox {
    color: #FFFFFF;
}
QCheckBox::indicator {
    width: 16px;
    height: 16px;
}
QCheckBox::indicator:checked {
    background: #BF2C23;
    border: 2px solid #FFFFFF;
}
QCheckBox::indicator:unchecked {
    background: #FFFFFF;
    border: 2px solid #BF2C23;
}

/* Tables */
QTableWidget {
    background-color: #FFFFFF;
    color: #000000;
    gridline-color: #BF2C23;
    font-size: 14px;
}
QHeaderView::section {
    background-color: #BF2C23;
    color: #FFFFFF;
    font-weight: bold;
    padding: 5px;
    border: 1px solid #FFFFFF;
}

/* Progress Bars */
QProgressBar {
    border: 2px solid #FFFFFF;
    background: #2F67B1;
    color: #FFFFFF;
}
QProgressBar::chunk {
    background-color: #BF2C23;
}

/* Combo Boxes */
QComboBox {
    background-color: #FFFFFF;
    color: #000000;
    border: 2px solid #BF2C23;
    padding: 5px;
}
QComboBox::drop-down {
    background-color: #BF2C23;
    border-left: 1px solid #FFFFFF;
}
QComboBox::down-arrow {
    image: url("resources/down_arrow.png"); /* Replace with an actual arrow icon */
}
