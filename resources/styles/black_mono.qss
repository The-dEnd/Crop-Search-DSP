/* Black Mono Theme, generated by AI GPT4 */
QWidget {
    font-family: monospace; /* Uses system's default monospace font */
    font-size: 10pt;
    background-color: black;
    color: white;
}

/* Buttons */
QPushButton {
    background-color: #444444;
    color: white;
    border: 1px solid white;
    padding: 5px;
}

QPushButton:hover {
    background-color: white;
    color: black;
}

QPushButton:pressed {
    background-color: gray;
    color: black;
}

/* Line edits */
QLineEdit {
    background-color: black;
    color: white;
    border: 1px solid white;
    padding: 4px;
}

/* Labels */
QLabel {
    background-color: black;
    color: white;
}

/* Checkboxes */
QCheckBox {
    background-color: black;
    color: white;
}

/* Scrollbars */
QScrollBar {
    background-color: black;
}

QScrollBar::handle {
    background-color: white;
}

/* Menus */
QMenu {
    background-color: black;
    color: white;
}

QMenu::item:selected {
    background-color: white;
    color: black;
}

/* Tables and List Views */
QTableView, QListView {
    background-color: black;
    color: white;
    gridline-color: white;
}

/* Status Bar */
QStatusBar {
    background-color: black;
    color: white;
}

/* Tooltips */
QToolTip {
    background-color: black;
    color: white;
    border: 1px solid white;
}


QRadioButton::indicator {
    width: 16px;
    height: 16px;
    border-radius: 8px;
    background-color: #444444; /* Default circle background */
    border: 1px solid #888888;
}

QRadioButton::indicator:hover {
    background-color: #666666;
    border: 1px solid #AAAAAA;
}

QRadioButton::indicator:checked {
    background-color: #FFFFFF; /* Accent color when checked */
}

QRadioButton::indicator:disabled {
    background-color: #2E2E2E;
    border: 1px solid #555555;
}